create or replace PACKAGE BODY PACKAGE_APPROVED_ZONE
IS
    PROCEDURE ADD_NEW_ZONE(BIN_NAME VARCHAR2, NEW_ZONE_NAME VARCHAR2)
    IS
    BEGIN
    INSERT INTO APPROVED_ZONE(BIN, ZONE)
    VALUES(BIN_NAME, NEW_ZONE_NAME);
    END;

    FUNCTION BIN_AND_ZONE_EXISTS(BIN_NAME VARCHAR2, ZONE_NAME VARCHAR2)
    RETURN NUMBER
    IS
    BIN_EXISTS NUMBER:= 0;
    ZONE_EXISTS NUMBER:= 0;
    DOES_EXISTS NUMBER:= 0;
    BEGIN
        SELECT COUNT(UNIQUE(BIN)), COUNT(ZONE)
        INTO BIN_EXISTS, ZONE_EXISTS
        FROM APPROVED_ZONE
        WHERE BIN_NAME LIKE BIN
            AND ZONE LIKE ZONE_NAME;
        DBMS_OUTPUT.PUT_LINE(BIN_EXISTS);
        DBMS_OUTPUT.PUT_LINE(ZONE_EXISTS);
        DOES_EXISTS := NVL(BIN_EXISTS,0) * NVL(ZONE_EXISTS,0);
        RETURN DOES_EXISTS;
    END;
END;
