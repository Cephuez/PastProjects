CREATE TABLE CUSTOMER_ORDERS(
    ID INT,
    ORDER_ID INT,
    PRODUCT_ID INT,
    QUANTITY INT,
    CONFIRMED VARCHAR2(1)  DEFAULT 'N' CHECK(CONFIRMED IN('Y', 'N')),
    CONSTRAINT CUSTOMER_ORDERS_PK PRIMARY KEY(ID),
    CONSTRAINT CUSTOMER_ORDERS_FK1 FOREIGN KEY(ORDER_ID) REFERENCES ORDERS(ORDER_ID),
    CONSTRAINT CUSTOMER_ORDERS_FK2 FOREIGN KEY(PRODUCT_ID) REFERENCES PRODUCTS(PRODUCT_ID)
);
