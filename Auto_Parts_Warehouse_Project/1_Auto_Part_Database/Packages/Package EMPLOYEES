create or replace PACKAGE PACKAGE_EMPLOYEE
AS
    PROCEDURE UPDATE_FIRST_NAME(E_ID INT, F_NAME VARCHAR2);
    PROCEDURE UPDATE_LAST_NAME(E_ID INT, L_NAME VARCHAR2);
    PROCEDURE UPDATE_EMPLOYEE_JOB(E_ID INT, J_ID INT);
    PROCEDURE UPDATE_EMPLOYEE_DEPARTMENT(E_ID INT, D_ID INT);
    PROCEDURE UPDATE_EMPLOYEE_TEAM_MEMBER_GROUP(E_ID INT, TMG_ID INT);
    PROCEDURE REMOVE_EMPLOYEE(E_ID INT);
    PROCEDURE ADD_EMPLOYEES(FName VARCHAR2, LName VARCHAR2);
    PROCEDURE ADD_EMPLOYEES(FName VARCHAR2, LName VARCHAR2, HIRE_DATE DATE);
    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2);
    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2, HIRE_DATE DATE);
    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2, DEP_ID INT, HIRE_DATE DATE);
END PACKAGE_EMPLOYEE;

create or replace PACKAGE BODY PACKAGE_EMPLOYEE
AS
    PROCEDURE UPDATE_FIRST_NAME(E_ID INT, F_NAME VARCHAR2)
    IS
    BEGIN
    UPDATE EMPLOYEES
    SET FIRST_NAME = F_NAME
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE UPDATE_LAST_NAME(E_ID INT, L_NAME VARCHAR2)
    IS
    BEGIN
    UPDATE EMPLOYEES
    SET LAST_NAME = L_NAME
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE UPDATE_EMPLOYEE_JOB(E_ID INT, J_ID INT)
    IS
    BEGIN
    UPDATE EMPLOYEES
    SET JOB_ID = J_ID
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE UPDATE_EMPLOYEE_DEPARTMENT(E_ID INT, D_ID INT)
    IS
    BEGIN
    UPDATE EMPLOYEES
    SET DEPARTMENT_ID = D_ID
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE UPDATE_EMPLOYEE_TEAM_MEMBER_GROUP(E_ID INT, TMG_ID INT)
    IS
    BEGIN
    UPDATE EMPLOYEES
    SET TEAM_MEMBER_GROUP = TMG_ID
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE REMOVE_EMPLOYEE(E_ID INT)
    IS
    BEGIN
    DELETE FROM EMPLOYEES
    WHERE EMPLOYEE_ID = E_ID;
    END;

    PROCEDURE ADD_EMPLOYEES(FName VARCHAR2, LName VARCHAR2)
    IS
    BEGIN
    INSERT INTO EMPLOYEES(EMPLOYEE_ID, FIRST_NAME, LAST_NAME,HIRE_DATE)
    VALUES(EMP_S.NEXTVAL, FName, LName, SYSDATE);
    END;

    PROCEDURE ADD_EMPLOYEES(FName VARCHAR2, LName VARCHAR2, HIRE_DATE DATE)
    IS
    BEGIN
    INSERT INTO EMPLOYEES(EMPLOYEE_ID, FIRST_NAME, LAST_NAME, HIRE_DATE)
    VALUES(EMP_S.NEXTVAL, FName, LName, HIRE_DATE);
    END;

    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2)
    IS
    BEGIN
    INSERT INTO EMPLOYEES(EMPLOYEE_ID, JOB_ID, FIRST_NAME, LAST_NAME, HIRE_DATE)
    VALUES(EMP_S.NEXTVAL, J_ID, FName, LName, SYSDATE);
    END;

    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2, HIRE_DATE DATE)
    IS
    BEGIN
    INSERT INTO EMPLOYEES(EMPLOYEE_ID, JOB_ID, FIRST_NAME, LAST_NAME, HIRE_DATE)
    VALUES(EMP_S.NEXTVAL, J_ID, FName, LName, HIRE_DATE);
    END;

    PROCEDURE ADD_EMPLOYEES(J_ID INT, FName VARCHAR2, LName VARCHAR2, DEP_ID INT, HIRE_DATE DATE)
    IS
    BEGIN
    INSERT INTO EMPLOYEES(EMPLOYEE_ID, JOB_ID, FIRST_NAME, LAST_NAME, DEPARTMENT_ID, HIRE_DATE)
    VALUES(EMP_S.NEXTVAL, J_ID, FName, LName, DEP_ID, HIRE_DATE);
    END;
END;
