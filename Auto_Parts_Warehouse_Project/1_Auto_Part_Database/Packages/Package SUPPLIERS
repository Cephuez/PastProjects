create or replace PACKAGE PACKAGE_SUPPLIERS
AS
    PROCEDURE UPDATE_SUPPLIER_ADDRESS(S_ID INT, ADDR VARCHAR2);
    PROCEDURE UPDATE_SUPPLIER_CITY(S_ID INT, CTY VARCHAR2);
    PROCEDURE UPDATE_SUPPLIER_COUNTRY(S_ID INT, CNTRY VARCHAR2);
    PROCEDURE ADD_NEW_SUPPLIER(COMP_NAME VARCHAR2);
    PROCEDURE ADD_NEW_SUPPLIER(COMP_NAME VARCHAR2, ADDR VARCHAR2, CTY VARCHAR2, CNTRY VARCHAR2);
    PROCEDURE REMOVE_SUPPLIER(S_ID INT);
END PACKAGE_SUPPLIERS;

create or replace PACKAGE BODY PACKAGE_SUPPLIERS
AS
    PROCEDURE UPDATE_SUPPLIER_ADDRESS(S_ID INT, ADDR VARCHAR2)
    IS
    BEGIN
    UPDATE SUPPLIERS
    SET ADDRESS = ADDR
    WHERE SUPPLIER_ID = S_ID;
    END;

    PROCEDURE UPDATE_SUPPLIER_CITY(S_ID INT, CTY VARCHAR2)
    IS
    BEGIN
    UPDATE SUPPLIERS
    SET CITY = CTY
    WHERE SUPPLIER_ID = S_ID;
    END;

    PROCEDURE UPDATE_SUPPLIER_COUNTRY(S_ID INT, CNTRY VARCHAR2)
    IS
    BEGIN
    UPDATE SUPPLIERS
    SET COUNTRY = CNTRY
    WHERE SUPPLIER_ID = S_ID;
    END;

    PROCEDURE ADD_NEW_SUPPLIER(COMP_NAME VARCHAR2)
    IS
    BEGIN
    INSERT INTO SUPPLIERS(SUPPLIER_ID, COMPANY_NAME)
    VALUES(SUPPLIER_S.NEXTVAL, COMP_NAME);
    END;

    PROCEDURE ADD_NEW_SUPPLIER(COMP_NAME VARCHAR2, ADDR VARCHAR2, CTY VARCHAR2,  CNTRY VARCHAR2)
    IS
    BEGIN
    INSERT INTO SUPPLIERS(SUPPLIER_ID, COMPANY_NAME, ADDRESS, CITY, COUNTRY)
    VALUES(SUPPLIER_S.NEXTVAL, COMP_NAME, ADDR, CTY, CNTRY);
    END;

    PROCEDURE REMOVE_SUPPLIER(S_ID INT)
    IS
    BEGIN
    DELETE FROM SUPPLIERS
    WHERE SUPPLIER_ID = S_ID;
    END;

END;
