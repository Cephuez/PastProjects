create or replace PACKAGE PACKAGE_CATEGORIES
AS
    PROCEDURE CHANGE_CATEGORY_NAME(C_ID INT, C_NAME VARCHAR2);
    PROCEDURE CHANGE_CATEGORY_DESCRIPTION(C_ID INT, C_DESC VARCHAR2);
    PROCEDURE ADD_CATEGORY(C_NAME VARCHAR2, DES VARCHAR2);
    PROCEDURE REMOVE_CATEGORY(C_ID INT);
END PACKAGE_CATEGORIES;

create or replace PACKAGE BODY PACKAGE_CATEGORIES
AS
    PROCEDURE CHANGE_CATEGORY_NAME(C_ID INT, C_NAME VARCHAR2)
    IS
    BEGIN
    UPDATE CATEGORIES
    SET CATEGORY_NAME = C_NAME
    WHERE CATEGORY_ID = C_ID;
    END;

    PROCEDURE CHANGE_CATEGORY_DESCRIPTION(C_ID INT, C_DESC VARCHAR2)
    IS
    BEGIN
    UPDATE CATEGORIES
    SET CATEGORIES.DESCRIPTION = C_DESC
    WHERE CATEGORY_ID = C_ID;
    END;

    PROCEDURE ADD_CATEGORY(C_NAME VARCHAR2, DES VARCHAR2)
    IS
    BEGIN
    INSERT INTO CATEGORIES(CATEGORY_ID, CATEGORY_NAME, DESCRIPTION)
    VALUES(CATEGORIES_S.NEXTVAL, C_NAME, DES);
    END;

    PROCEDURE REMOVE_CATEGORY(C_ID INT)
    IS
    BEGIN
    DELETE FROM CATEGORIES
    WHERE CATEGORY_ID = C_ID;
    END;
END;
